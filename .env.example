# MongoDB Configuration
# Get these values from your MongoDB Atlas cluster or local MongoDB instance

# MongoDB Connection URI
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/
# For local MongoDB: mongodb://localhost:27017/
VITE_MONGODB_URI=mongodb://localhost:27017/

# Database name
VITE_MONGODB_DB_NAME=omnidesk

# Storage Backend Configuration
# Options: 'localstorage' (default) or 'mongodb'
# If not set or if MongoDB is not configured, falls back to localstorage
VITE_STORAGE_BACKEND=localstorage

# Optional: Enable offline mode with sync when using MongoDB
VITE_ENABLE_OFFLINE_MODE=true

# Optional: Sync interval in milliseconds (default: 30000 = 30 seconds)
VITE_SYNC_INTERVAL_MS=30000
