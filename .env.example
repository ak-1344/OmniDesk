# Supabase Configuration
# Get these values from your Supabase project settings (https://app.supabase.com)
# Go to Settings > API to find your project URL and anon key

VITE_SUPABASE_URL=https://your-project-ref.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Storage Backend Configuration
# Options: 'localstorage' (default) or 'supabase'
# If not set or if Supabase is not configured, falls back to localstorage
VITE_STORAGE_BACKEND=localstorage

# Optional: Enable offline mode with sync when using Supabase
VITE_ENABLE_OFFLINE_MODE=true

# Optional: Sync interval in milliseconds (default: 30000 = 30 seconds)
VITE_SYNC_INTERVAL_MS=30000
