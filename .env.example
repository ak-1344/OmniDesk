# MongoDB Backend API Configuration
# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# Storage Backend Configuration
# Options: 'sync' (default - MongoDB primary with localStorage backup), 'mongodb' (MongoDB only), 'localstorage' (localStorage only)
# 'sync' implements AP pattern from CAP theorem (Availability + Partition tolerance)
# - Fetches from MongoDB first when online
# - Falls back to localStorage when offline
# - Syncs localStorage changes to MongoDB when connection restored
NEXT_PUBLIC_STORAGE_BACKEND=sync

# Optional: Enable offline mode with sync when using MongoDB
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true

# Optional: Sync interval in milliseconds (default: 30000 = 30 seconds)
NEXT_PUBLIC_SYNC_INTERVAL_MS=30000
